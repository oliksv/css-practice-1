        
                      <header class='header row g-0'>
                              <div class="col-3">
                                  {{>logo}}
                                </div>
                        <nav class='header_nav col-9' >
                            <div class="nav_right">
                              {{>nav list=header}}
                            </div>
                        </nav>
                     </header> 

                          <main class="main">

                              {{#with info}}
                                 <div class="info">
                                     <div class="info_content">
                                      <h1 class="info_title">
                                           {{title}}
                                        </h1>
                                       <p class="info_text">{{description}}</p>
                                    </div>
                                  </div>
                             {{/with}}
                            
                              
                            {{#with form}}
                              <form class="form">
                                <h2 class="form_title">{{title}}</h2>
                                <div class="form_input_list">
                                    {{#each inputs}}
                                        <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
                                    {{/each}}
                                </div>
                                <div class="form_checkbox">
                                    
                                    <input type="checkbox" name="{{chechbox.name}}" id="{{checkbox.name}}">
                                    
                                    <div></div>
                                    <label for="{{checkbox.name}}" >{{checkbox.label}}</label>
                                </div>
                                <button type="submit" class="form_button">{{button}}</button>

                                <p class="form_info">{{info}}</p>
                              </form>
                            {{/with}}

                          </main>
                          {{#with updates}}
                              <div class="updates">
                                 <h1 class="updates_title">{{title}}</h1>
                                    {{#each list}}
                                    <div class="list">
                                       <span class='list_logo badge' style='background-color:{{color}}'>32*32
                                         </span>
                                          <div class="list_text">
                                            <strong class="list_nickname"> @{{nickname}}</strong>
                                            <p class="list_description">{{description}}</p>
                                          </div>
                                    </div>
                                    {{/each}}                             
                                 <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
                              </div>
                              {{/with}}

                  <div class="expirience">
                    <div class="exp_badge ">hot!</div>
                        {{#with expirience}}
                        <strong>
                                {{title}}
                            </strong>
                        <div class="expirience_row">
                            {{#each list}}
                            <div class="list">
                             
                              <strong class="list_nickname">{{this.name}}</strong>
                              <p>{{this.details}}</p>
                            </div>
                            {{/each}}
                            
                        </div>
                        {{/with}}
                  </div>

                    <footer class="row footer g-0">
                        <div class="col-3">
                          {{>logo}}
                          <span class="footer_copyright">Copyright 2024</span> 
                        </div>
                        {{#each footer}}
                        <div class="col-3">
                            <span class="footer_title">{{title}}</span>
                            {{>nav list=links isVertical=true}}
                        </div>
                        {{/each}}

                    </footer>
           
 
